@model IEnumerable<ViewBook>
@{
    ViewData["Title"] = "Book Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="http://www.gifgifachance.com/uploads/6/5/9/4/65943003/open-book-mockup-2_orig.gif" alt="Book" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>


                </p>
            </div>
        </div>
        <div class="item">
            <img src="https://i.pinimg.com/originals/4f/8f/48/4f8f4849d7ca6c6d81964c3c61f9d085.gif" alt="Book" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>

                </p>
            </div>
        </div>
        <div class="item">
            <img src="http://www.pinkkarton.pl/wp-content/uploads/2015/05/NYC-kirk-01.gif" alt="Book" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>

                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="SeePopBook">
    <p class="seepopbookp">
        See Our Top Popular Books
    </p>
</div>



<div class="rowbook">


    @foreach (var item in Model.Skip(0).Take(4))
    {

        {
            <div class="childrow1">
                <div>
                    <div>
                        <a class="childrow1a" asp-controller="Books" asp-action="GetBooks" asp-route-Id="@item.Id">
                            <p class="prow">

                                @item.Name
                            </p>
                            <p class="prow">
                                @item.Author
                            </p>
                            <p class="prowPrice">
                                @item.Price <span>&#1423;</span>
                            </p>

                            <p class="prow">
                                @{
                                    for (int j = 0; j < item.Popular; j++)
                                    {
                                        <span class="star">&#9733;</span>
                                    }
                                }
                            </p>
                        </a>
                    </div>
                </div>
            </div>

        }


    }
</div>
