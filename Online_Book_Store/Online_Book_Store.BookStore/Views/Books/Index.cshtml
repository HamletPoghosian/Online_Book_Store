    </p>
</div>
<div class="rowbook">


    @foreach (var item in Model.Skip(0).Take(4).Where(e=>e.Popular==5))
    {

        {
            <div class="childrow1">
                <div>
                    <div>
                        <a class="childrow1a" asp-controller="Books" asp-action="GetBooks" asp-route-Id="@item.Id">
                            <p class="prowName">

                                @item.Name
                            </p>
                            <p class="prow">
                                @item.Author
                            </p>
                            <p class="prowPrice">
                                @item.Price <span>&#1423;</span>
                            </p>
                            <p class="prowimg">
                                <img  class="prowimg" src="https://img.icons8.com/cotton/2x/book.png" alt="book" />
                            </p>

                            <p class="prow">
                                @{
                                    for (int j = 0; j < item.Popular; j++)
                                    {
                                        <span class="star">&#9733;</span>
                                    }
                                }
                            </p>
                            <p class="prowCategory">

                                @item.CategoryName
                            </p>
                        </a>
                    </div>
                </div>
            </div>

        }


    }
