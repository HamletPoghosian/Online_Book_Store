                                @item.Name
                            </p>
                            <p class="prow">
                                @item.Author
                            </p>
                            <p class="prowPrice">
                                @item.Price <span>&#1423;</span>
                            </p>

                            <p class="prow">
                                @{
                                    for (int j = 0; j < item.Popular; j++)
                                    {
                                        <span class="star">&#9733;</span>
                                    }
                                }
                            </p>
                            <p class="prow">

                                @item.CategoryName
                            </p>
                        </a>
                    </div>
                </div>
            </div>

        }


    }
