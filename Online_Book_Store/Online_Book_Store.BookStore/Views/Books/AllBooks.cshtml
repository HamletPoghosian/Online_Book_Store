@model ViewSearch

@{
    ViewData["Title"] = "AllBooks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Books</h2>

<p class="showbookAmount">
    Filtr By
</p>
<form method="post">

    <p class="showbookFilter">
        <input asp-for="Name" type="text" />
    </p>
    <p class="showbookFilter">
        <input asp-for="Author" type="text" />
    </p>
    <p class="showbookFilter">
        <input asp-for="Publish" type="date" />
    </p>
    <p class="showbookFilter">
        <input asp-for="MinPrice" type="number" aria-label="Minimum price" class="form-control">
    </p>
    <p class="showbookFilter">
        <input asp-for="MaxPrice" type="number" aria-label="Maximum price" class="form-control">
    </p>
    <p class="showbookFilter">
        <input asp-for="Popular" type="range" min="1" max="5" style="width:25%">
    </p>
    <p class="showbookFilter">
        <input asp-action="AllBooks" type="submit" value="search" />
    </p>




</form>


<div class="rowbookcart">

    @foreach (var item in Model.Books)
    {
        <div class="childrow2froShopingCart">
            <a class="childrow1a" asp-controller="Books" asp-action="GetBooks" asp-route-Id="@item.Id">
                <p class="prowName">
                    @Html.DisplayFor(modelItem => item.Name)
                </p>
                <p class="prow">
                    @Html.DisplayFor(modelItem => item.Author)
                </p>

                <p class="prow">
                    @Html.DisplayFor(modelItem => item.Price)<span>&#1423;</span>
                </p>
                <p class="prow">
                    @{
                        for (int j = 0; j < item.Popular; j++)
                        {
                            <span class="star">&#9733;</span>
                        }
                    }
                </p>
                <p class="prow">
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </p>
            </a>
        </div>
    }
</div>

@for (int i = 0; i < Model.Books.Count(); i++)
{
    <a asp-action="AllBooks" asp-route-count="@i" class="paginationsm">@i</a>

}
