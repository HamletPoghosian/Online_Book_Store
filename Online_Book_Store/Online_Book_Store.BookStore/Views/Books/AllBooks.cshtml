@model ViewSearch

@{
    ViewData["Title"] = "AllBooks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Books</h2>

<p class="showbookAmount">
    Filtr By
</p>
<form method="post">
   
    <dl class="showbookAmount">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            <input class="showbookFilter" asp-for="Name" type="text" />
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd>
            <input class="showbookFilter" asp-for="Author" type="text" />
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Publish)
        </dt>
        <dd>
            <input class="showbookFilter" asp-for="Publish" type="date" />
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.MinPrice)
        </dt>
        <dd>
            <input class="showbookFilter" asp-for="MinPrice" type="number" >
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.MaxPrice)
        </dt>
        <dd>
            <input class="showbookFilter" asp-for="MaxPrice" type="number" >
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Popular)
        </dt>
        <dd>
            <input class="showbookFilter" asp-for="Popular" type="range" min="1" max="5" style="width:50" >
        </dd>
        
    </dl>
    


    <input class="showbookbutton1" type="submit"  value="Search" />
</form>


<div class="rowbookcart">

    @foreach (var item in Model.Books)
    {
        <div class="childrow2froShopingCart">
            <a class="childrow1a" asp-controller="Books" asp-action="GetBooks" asp-route-Id="@item.Id">
                <p class="prowName">
                    @Html.DisplayFor(modelItem => item.Name)
                </p>
                <p class="prow">
                    @Html.DisplayFor(modelItem => item.Author)
                </p>

                <p class="prow">
                    @Html.DisplayFor(modelItem => item.Price)<span>&#1423;</span>
                </p>
                <p class="prow">
                    @{
                        for (int j = 0; j < item.Popular; j++)
                        {
                            <span class="star">&#9733;</span>
                        }
                    }
                </p>
                <p class="prow">
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </p>
            </a>
        </div>
    }
</div>

@for (int i = 0; i < Model.Books.Count(); i++)
{
    <a asp-action="AllBooks" asp-route-count="@i" class="paginationsm">@i</a>

}
